    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            currentUserName = await sessionStorage.GetItemAsync<string>("userName");
            UserService.SendGreetings(currentUserName);

            var encodedMsg = $"{UserService.User} connected to server!";
            messages.Add(encodedMsg);

            await InvokeAsync(() =>
            {
                StateHasChanged();
            });

        }
    }

    public void OnNotify()
    {
        notifyCount++;

        //Checks if user actually exists, else don't do anything
        if (!string.IsNullOrEmpty(UserService.User))
        {
            var encodedMsg = $"{UserService.Time} : {UserService.User} > {UserService.Message}";
            messages.Add(encodedMsg);
        }

        InvokeAsync(() =>
        {
            StateHasChanged();
        });

    }

