@page "/chathub"

@using Microsoft.AspNetCore.SignalR.Client
@using BlazorServerApp_Chess.Data

@using DataAccessLibrary.Models;
@using BlazorServerApp_Chess.Services;

@inject NavigationManager NavigationManager
@inject Blazored.SessionStorage.ISessionStorageService sessionStorage
@inject UserService UserService

@implements IDisposable


<div>
    <label>
        <a>@currentUserName</a>
    </label>
</div>
<div class="form-group">
    <label>
        Message:
        <input @bind="messageInput" size="50" />
    </label>
</div>
<button @onclick="@(() => UserService.Send(currentUserName, messageInput))" disabled="@(!UserService.IsConnected)">Send</button>

<p>@usersConnectedCount users online!</p>
<hr>

<p>notifies: @notifyCount</p>

<ul id="messagesList">
    @foreach (var message in messages)
    {
        <li>@message</li>
    }
</ul>

