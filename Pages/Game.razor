@page "/gamehub"

@using Microsoft.AspNetCore.SignalR.Client
@using BlazorServerApp_Chess.Data
@using BlazorServerApp_Chess.Models
@using BlazorServerApp_Chess.Services

@inject Blazored.SessionStorage.ISessionStorageService sessionStorage
@inject NavigationManager NavigationManager
@inject IConnectionManager connectionManager

@implements IDisposable

<style>

    .board {
        background-color: white;
        display: flex;
        flex-direction: row;
        max-width: 50%;
        min-width: 50%;
    }

    .column {
        min-width: 60px;
        min-height: 60px;
        height: 100%;
    }

    .gamepiece {
        border: solid 1px black;
        min-height: 60px;
        min-width: 60px;
    }

    .x {
        background-image: url(../css/images/letter-x.png);
        background-repeat: no-repeat;
    }

    .o {
        background-image: url(../css/images/letter-o.png);
        background-repeat: no-repeat;
    }

    .blank {
        background-image: none;
    }
</style>

<h3>Board</h3>

<div>
    <div>
        Board
    </div>
    <div class="board">
        @for (int i = 0; i < 3; i++)
        {
            <div class="column">
                @for (int j = 0; j < 3; j++)
                {
                    int x = i;
                    int y = j;
                    <div class="gamepiece
                         @gameService.gameBoard.Board[i, j].Style.ToString().ToLower()" @onclick="((e) => gameService.gameBoard.PieceClicked(x, y))">
                    </div>
                }
            </div>
        }
    </div>

</div>
@if (IsConnected)
{
    <div>
        <h1>Players:</h1>
        @foreach (var p in players)
        {
        <div>
            <p>@p.Username : @p.ConnectionId</p>

        </div>
        }
    </div>
}



@code {

    private bool isSearchingOpponent = true;
    private string currentUserName = "";
    private string selectedSide = "";

    private static GameService gameService;

    private string[,] boardState3D;

    public List<PlayerModel> players;

    private HubConnection hubConnection;

    public bool IsConnected =>
        hubConnection.State == HubConnectionState.Connected;

    protected override async Task OnInitializedAsync()
    {
        players = new List<PlayerModel>();
        gameService = new GameService();

        hubConnection = new HubConnectionBuilder()
            .WithUrl(NavigationManager.ToAbsoluteUri("/gamehub"))
            .Build();

        hubConnection.On<List<PlayerModel>>("ReceiveAllPlayers", (p) =>
        {
            Console.WriteLine("On: Players count: ", players.Count);
            players.AddRange(p);
            StateHasChanged();
        });

        await hubConnection.StartAsync();

        if (IsConnected)
        {
            Console.WriteLine("Game OnInitialized");
            foreach(var p in players)
            {
                Console.WriteLine($"Game.razor : {p.Username}");

            }
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            currentUserName = await sessionStorage.GetItemAsync<string>("userName");
            await hubConnection.SendAsync("AddPlayer", currentUserName);
        }
    }

    Task SendPlayerMove() =>
        hubConnection.SendAsync("SendPlayerMove", boardState3D);

    private async Task OnBoxClick(EventArgs e, int row, int col)
    {
        if (boardState3D[row, col] != " " || selectedSide == null)
        {
            return;
        }
        else
        {
            boardState3D[row, col] = selectedSide; // X or O
            await Task.FromResult(hubConnection.SendAsync("SendPlayerMove", selectedSide, row, col));
            StateHasChanged();
        }
    }

    private void OnStartFindingGame()
    {
        isSearchingOpponent = true;
    }

    private void ResetBoard()
    {
        boardState3D = new string[3, 3] { {" ", " ", " " },
                  {" ", " ", " " },
                  {" ", " ", " " } };

        StateHasChanged();

    }

    public async void Dispose()
    {
        await hubConnection.SendAsync("DeletePlayer", hubConnection.ConnectionId);
        connectionManager.RemoveConnection(hubConnection.ConnectionId);
        _ = hubConnection.DisposeAsync();
    }
}
